                    <option value="{{ locale }}" {% if locale == app.request.locale %}selected="selected"{% endif %}>
                        {{ locale }}
                    </option>
                    {% endfor %}
                </select>
                {% if app.user %}
                    <a class="nav-link" accesskey="l" href="{{ path('logout') }}" title="{{ 'Logout'|trans }}">
